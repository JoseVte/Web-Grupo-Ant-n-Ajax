
{% extends app.request.isXmlHttpRequest ? "DSSProyectoBundle::layout_ajax.html.twig": "DSSProyectoBundle::Login/plantillaLogin.html.twig" %}



{% block content %}

    <h1>Iniciar Sesion</h1>

    <form action="{{ path('dss_proyecto_login_check') }}" method="post">
        <label for="username">NIF:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" />
<br/>
        <label for="password">Contrase√±a:</label>
        <input type="password" id="password" name="_password" />

        <input type="hidden" name="_target_path" value="/"/>
        {#
            If you want to control the URL the user
            is redirected to on success (more details below)
            <input type="hidden" name="_target_path" value="/account" />
        #}
<br/>
        <button type="submit">login</button>
    </form>

    {% if error %}
        <div>{{ error.message }}</div>
    {% endif %}
{% endblock %}
